<%- include ('partials/head.ejs') %>
<div id="main-wrapper">
    <%- include ('partials/navbar.ejs') %>
    <%- include ('partials/sidebar.ejs') %>
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Settings</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-xlg-12">
                    <div class="card p-4">
                        <form action="" id="settingsForm" method="POST">
                            <div class="controls">
                                <div class="control_card">
                                    <h4>> Activate House Protection Mode:</h4>
                                    <div class="onoffswitch">
                                        <% if(preferences.sendMotionNotification) { %>
                                            <input type="checkbox" name="myonoffswitch" class="onoffswitch-checkbox"
                                                id="myonoffswitch" checked>
                                        <% } else { %>
                                            <input type="checkbox" name="myonoffswitch" class="onoffswitch-checkbox"
                                                id="myonoffswitch">
                                        <% } %>
                                        <label class="onoffswitch-label" for="myonoffswitch">
                                            <span class="onoffswitch-inner"></span>
                                            <span class="onoffswitch-switch"></span>
                                        </label>
                                    </div>

                                    <h4>> Activate Temperature Notifications:</h4>
                                    <div class="onoffswitch">
                                        <% if(preferences.sendTempNotification) { %>
                                            <input type="checkbox" name="myonoffswitch2" class="onoffswitch-checkbox"
                                                id="myonoffswitch2" checked>
                                        <% } else { %>
                                            <input type="checkbox" name="myonoffswitch2" class="onoffswitch-checkbox"
                                                id="myonoffswitch2">
                                        <% } %>
                                        <label class="onoffswitch-label" for="myonoffswitch2">
                                            <span class="onoffswitch-inner"></span>
                                            <span class="onoffswitch-switch"></span>
                                        </label>
                                    </div>

                                    <h4>> Activate Weather Notifications:</h4>
                                    <div class="onoffswitch">
                                        <% if(preferences.sendWeatherNotification) { %>
                                            <input type="checkbox" name="myonoffswitch3" class="onoffswitch-checkbox"
                                                id="myonoffswitch3" checked>
                                        <% } else { %>
                                            <input type="checkbox" name="myonoffswitch3" class="onoffswitch-checkbox"
                                                id="myonoffswitch3">
                                        <% } %>
                                        <label class="onoffswitch-label" for="myonoffswitch3">
                                            <span class="onoffswitch-inner"></span>
                                            <span class="onoffswitch-switch"></span>
                                        </label>
                                    </div>
                                </div>

                                <br>
                                <div class="set_levels">

                                    <div class="level_temp">
                                        <h4>> Set Temperature level</h4>
                                        <div class="slidecontainer">
                                            <input type="range" min="1" max="100" value="<%= preferences.lowTemp %>" class="slider" id="myRange">
                                            <p>Lowest Level: <span id="demo"></span></p>
                                        </div>

                                        <div class="slidecontainer">
                                            <input type="range" min="1" max="100" value="<%= preferences.highTemp %>" class="slider" id="myRange2">
                                            <p>Highest Level: <span id="demo2"></span></p>
                                        </div>

                                    </div>

                                    <br>
                                    <div class="level_roomname">
                                        <label for="roomname">Room Name: </label> &nbsp;
                                        <input type="text" value="<%= preferences.roomName %>" name="roomname" />
                                    </div>

                                    <br>
                                    <input type="submit" name="update_params" value="Update">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-place-holder"></div>
    </div>
    <footer class="footer"></footer>
</div>
</div>
<%- include ('partials/tail.ejs') %>